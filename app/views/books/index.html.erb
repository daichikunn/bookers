<h1>Books</h1>
<% @books.each do |book|%>
<table>
  <colgroup>
  <col style="width: 20%;">
  <col style="width: 20%;">
  <col style="width: 60%;">
  </colgroup>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="10"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <tb><%= book.title %></tb>
      <tb><%= book.body %></tb>
      <tb>
          <%= link_to "Show", book_path(book.id)%>
          <%= link_to "Edit", edit_book_path(book.id)%>
          <%= link_to "Destroy", book_path(book.id), method: :delete%>
      </tb>
    </tr>
  </tbody>
</table>
<% end %>
<h2>New book</h2>

<%= form_with model: @book, url: "/books", method: :post do |f| %>

  <h4>titel</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book"%>
<% end %>

